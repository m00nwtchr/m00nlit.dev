---
import {
	baseLocale,
	locales,
	extractLocaleFromUrl,
	setLocale,
} from '../../paraglide/runtime.js';
import Index from '../index.astro';

export function getStaticPaths() {
	return locales
		.filter(l => l !== baseLocale)
		.map(lang => ({
			params: { lang },
		}));
}

if (Astro.params.lang) {
	setLocale(Astro.params.lang);
}
